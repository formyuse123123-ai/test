pipeline {
    agent { label 'Jenkins-Agent' }

    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/formyuse123123-ai/test'
            }
        }

        stage("Build Application") {
            steps {
                sh "java -version"
                sh "mvn clean package"
            }
        }

        stage("Test Application") {
            steps {
                sh "mvn test"
            }
        }
    }
}
